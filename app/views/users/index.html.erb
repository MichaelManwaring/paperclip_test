<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
	<%= f.text_field :username %>
	<%= f.text_field :password_digest %>
	<%= f.file_field :avatar %>
	<%= f.submit :create %>
<% end %>


<% @users.each do |u| %>
	<%= content_tag :h3, "-------------------------------" %>
	<%= content_tag :h3, u.username %>
	<br>
	<%= image_tag u.avatar.url(:medium) %>
	<%= link_to "Delete", users_destroy_path(u) %>
	<br>
<% end %>
